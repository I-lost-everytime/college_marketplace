<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard - Book Marketplace</title>
  
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
  body, h1, h2, h3, h4, h5, h6, p, label, input, textarea, select, option, button {
    color: white !important;
  }

  body {
    background-color: #0d1117;
    color: #e6f1ff;
    font-family: 'Segoe UI', sans-serif;
  }

  .navbar {
    background-color: #000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .form-control {
    background-color: #1e293b;
    border: 1px solid #444;
    color: #e6f1ff;
  }

  .form-control:focus {
    border-color: #67e8f9;
    box-shadow: 0 0 10px rgba(103, 232, 249, 0.5);
    background-color: #1e293b;
    color: #e6f1ff;
  }

  .btn-primary {
    background-color: #6366f1;
    border: none;
    box-shadow: 0 0 10px rgba(99, 102, 241, 0.4);
  }

  .btn-primary:hover {
    background-color: #818cf8;
    box-shadow: 0 0 15px rgba(99, 102, 241, 0.6);
  }

  .card {
    background-color: #1e1e2f;
    color: #fff;
    border-radius: 14px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 2px solid transparent;
    height: 100%;
  }

  .card:hover {
    transform: scale(1.02);
    box-shadow: 0 0 25px var(--glow-color);
    border-color: var(--glow-color);
  }

  /* Adjust image height */
  .card-img-top {
    height: 140px;
    object-fit: cover;
  }

  /* Shrink card content */
  .card-body {
    padding: 0.75rem;
    font-size: 0.9rem;
  }

  .card-title {
    font-size: 1rem;
    margin-bottom: 0.3rem;
  }

  .card-subtitle {
    font-size: 0.85rem;
    margin-bottom: 0.3rem;
  }

  .card-text {
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
  }

  .price {
    font-weight: bold;
    font-size: 0.9rem;
  }

  /* Glow effect colors */
  .glow-1 { --glow-color: #00e5ff; }
  .glow-2 { --glow-color: #ff6ec7; }
  .glow-3 { --glow-color: #22c55e; }
  .glow-4 { --glow-color: #facc15; }
  .glow-5 { --glow-color: #f43f5e; }
  .glow-6 { --glow-color: #a78bfa; }
</style>

</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-dark mb-4">
    <div class="container d-flex justify-content-between align-items-center">
      <span class="navbar-brand mb-0 h1">Welcome, <%= user.name %>!</span>
      <div>
        <!-- Add this somewhere in your navbar -->
        <a href="/messages" class="btn btn-outline-light">ðŸ“© Messages</a>

        <a href="/books/add" class="btn btn-success btn-sm me-2">Add New Book</a>
        <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <!-- Search -->
    <form method="GET" action="/books/dashboard" class="input-group mb-4">
      <input type="text" name="search" class="form-control" placeholder="Search by title or author" value="<%= search %>">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <!-- Books -->
    <h3 class="mb-3">Books Available</h3>
    <div class="row">
      <% const glowClasses = ['glow-1', 'glow-2', 'glow-3', 'glow-4', 'glow-5', 'glow-6']; %>
      <% books.forEach((book, index) => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card <%= glowClasses[index % glowClasses.length] %> h-100 shadow-sm">
            <% if (book.image_url) { %>
              <img src="<%= book.image_url %>" class="card-img-top" alt="<%= book.title %>" style="object-fit: cover; height: 140px;">

            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= book.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">by <%= book.author %></h6>
              <p class="card-text"><%= book.description %></p>
              <p class="fw-bold text-success">â‚¹<%= book.price %></p>
              <p class="text-muted"><strong>Seller:</strong> <%= book.seller %></p>

              <div class="mt-auto d-flex justify-content-between align-items-center">
  <% if (book.user_id === user.id) { %>
    <a href="/books/edit/<%= book.id %>" class="btn btn-warning btn-sm">Edit</a>
    <form action="/books/delete/<%= book.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
      <button class="btn btn-danger btn-sm">Delete</button>
    </form>
  <% } else { %>
    <a href="/messages/<%= book.user_id %>" class="btn btn-primary btn-sm w-100">ðŸ“© Message Seller</a>
  <% } %>
</div>

            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
